@model IEnumerable<EmployeeReview.Models.Users>
@using GridMvc.Html
@using EmployeeReview.Models
@using GridMvc.Sorting

@{
    ViewBag.Title = "Index";
}

@Html.Grid(Model).Columns(columns =>
           {
               columns.Add(m => m.Fname).Sortable(true).Filterable(true);
                 columns.Add(m => m.Lname).Sortable(true).Filterable(true);
           }).WithPaging(20)

 
