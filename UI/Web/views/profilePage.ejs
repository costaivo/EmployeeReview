<!doctype html>
<html>
    <head>
		<link href="css/bootstrap.css" rel="stylesheet">
		<link href="css/sb-admin.css" rel="stylesheet">
        <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
		<title><%= user %></title>
    </head>
    <body>
        <div id="wrapper">
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                    <a class="navbar-brand" href="home.html">Employee Review</a>
                    <ul class="nav navbar-right top-nav">
                            <!--  top menu -->
                            <li class="dropdown">
                                <a href="login.html" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-power-off"></i> Log Out </a>                                
                            </li>
                            <!--  -->
                    </ul>
                    <div class="collapse navbar-collapse navbar-ex1-collapse">
                        <ul class="nav navbar-nav side-nav">
                            <!-- Left menu items -->
                            <li class="active">
                                <a>Profile</a>
                            </li>
                        </ul>
                    </div>
            </nav>
            <div id="page-wrapper">
                <div class="container-fluid">
                    <!-- Dashboard and Heading-->   
                    <div class=row>
                        <div class="col-sm-12">
                            <h1 class="page-header">Welcome <%= firstName %></h1><br>
                            <ol class="breadcrumb">
                                <li>
                                    <i class="fa fa-home"></i>  <a href="login.html">Home</a>
                                </li>
                                <li class="active">
                                    <i class="fa fa-edit"></i> Profile
                                </li>
                            </ol>
                        </div>
                    </div>
                    <!-- End of dashboard -->
                    <form name="user" action="/update" onsubmit="return true" method="POST">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>User name:</label>
                                <input class="form-control" type="email" id="User" name="Uemail" placeholder="<%= user %>" value="<%= user %>" disabled><br>
                                <div style="display:none">
                                    <input name="email" value="<%= user %>">
                                </div>
                            </div>
                        </div>
                        <div class="row">                        
                            <div class="col-sm-3">
                                <label>First name:</label>
                                <input class="form-control" type="text" name="firstName" value="<%= firstName %>">
                            </div>
                            <div class="col-sm-3">
                                <label>Middle name:</label>
                                <input class="form-control" type="text" name="middleName" value="<%= middleName %>">
                            </div>
                            <div class="col-sm-3">
                                <label>Last name:</label>
                                <input class="form-control" type="text" name="lastName" value="<%= lastName %>"><br>
                            </div>                        
                        </div>
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Designation</label>
                                <select class="form-control" id="designation" name="designation" value="<%= designation %>">
                                    <option value="junior developer">Junior Developer</option>
                                    <option value="developer">Developer</option>
                                    <option value="senior developer">Senior Developer</option>
                                    <option value="Other">Other...</option>
                                </select><br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <label>Birth date:</label>
                                <input class="form-control" type="date" id="dataOfBirth" name="dateOfBirth" placeholder="mm/dd/yy" value="<%= dateOfBirth %>">
                            </div>
                            <div class="col-sm-3">
                                <label>Date of joining:</label>
                                <input class="form-control" type="date" id="dateOfJoining" name="dateOfJoining" placeholder="mm/dd/yy" value="<%= dateOfJoining %>"><br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3">
                                <label>Team name:</label>
                                <input class="form-control" type="text" name="teamName" value="<%= team %>"><br>
                            </div>
                            <div class="col-sm-6">
                                <br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Skills:</label>
                                <textarea class="form-control" rows="3" name="skills" ><%= skills %></textarea><br>
                            </div>
                            <div class="col-sm-6">
                                <br>
                            </div>
                        </div>
                        <div class="row">
                            <div class=col-sm-6>
                                <input type="submit" class="btn btn-primary" value="Save">
                                <a href="home.html" class="btn btn-default" role="button">Cancel</a>
                                <label style="color:green"><%= message %></label>
                            </div>
                            <div class=col-sm-6>
                                <label><br></label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>